@model LicenseApplication.Models.User

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>
        
        <table>
            <tr>
                <td style="text-align:right;">@Html.LabelFor(model => model.EmailID)</td>
                <td style="text-align:left;">@Html.EditorFor(model => model.EmailID)</td>
                <td style="text-align:left;">@Html.ValidationMessageFor(model => model.EmailID)</td>
            </tr>
            <tr>
                <td style="text-align:right;">@Html.LabelFor(model => model.Password)</td>
                <td style="text-align:left;">@Html.EditorFor(model => model.Password)</td>
                <td style="text-align:left;">@Html.ValidationMessageFor(model => model.Password)</td>
            </tr>
            <tr>
                <td style="text-align:right;">@Html.LabelFor(model => model.First_Name)</td>
                <td style="text-align:left;">@Html.EditorFor(model => model.First_Name)</td>
                <td style="text-align:left;">@Html.ValidationMessageFor(model => model.First_Name)</td>
            </tr>
            <tr>
                <td style="text-align:right;">@Html.LabelFor(model => model.Last_Name)</td>
                <td style="text-align:left;">@Html.EditorFor(model => model.Last_Name)</td>
                <td style="text-align:left;">@Html.ValidationMessageFor(model => model.Last_Name)</td>
            </tr>
            <tr>
                <td style="text-align:right;">@Html.LabelFor(model => model.Display_Name)</td>
                <td style="text-align:left;">@Html.EditorFor(model => model.Display_Name)</td>
                <td style="text-align:left;">@Html.ValidationMessageFor(model => model.Display_Name)</td>
            </tr>
            <tr>
                    <td colspan="3">
                        <table style="width:100%">
                            <tr>
                                <td style="text-align: right">
                                    <p>@Html.ActionLink("Login", "Login", "User") if You have an Account</p>
                                </td>
                                <td style="text-align: right">
                                    <input type="submit" value="Register" />
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
        </table>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
